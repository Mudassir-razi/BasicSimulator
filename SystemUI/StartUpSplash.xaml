<Window x:Class="SystemUI.StartUpSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemUI"
        mc:Ignorable="d"
        Title="StartUpSplash" Height="351" Width="624"
        WindowStyle="None" WindowStartupLocation="CenterScreen" 
	    ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Window.Resources>
        <ImageBrush x:Key="splashIm" ImageSource="pack://application:,,,/ResourceManager;component/Resources/netsplash.png"/>
    </Window.Resources>
    <Grid>
        <Canvas Background="{StaticResource ResourceKey=splashIm}"/>
    </Grid>
</Window>
